<div class="container">
<div class="row">

<div class="col-lg-3">
<%= render 'books/list', book: @book , user: @book.user %>
</div>

<div class="col-lg-9">
<h2>Book detail</h2>

<table class = "table table-striped">


 <tr>
 	<% if @book.user == current_user %>

	  	<td>
	  		<%= link_to(user_path(@book.user)) do %>
	  		<%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "30×30" %><br>
	  	    <%= @book.user.name %>
	  	    <% end %>
	  	</td>
	    <td><%= @book.title %></td>
	    <td><%= @book.body %></td>
	    <td><%=link_to "Edit", edit_book_path(@book) %></td>
		<td><%=link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？"%></td>

    <% else %>

       <td><%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "30×30" %></td>
	  	    <%= link_to @book.user.name, user_path(@book.user) %>
	    <td><%= @book.title %></td>
	    <td><%= @book.body %></td>

	<% end %>
</tr>

</table>
</div>
</div>
</div>