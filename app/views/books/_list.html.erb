<h2>User info</h2>

<div class="profile-container">
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size: "30Ã—30" %>
</div>

<table class="table">

  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>

  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>

</table>

  <% if current_user.id %>
     <%= link_to edit_user_path(current_user), class: "btn btn-default btn-default btn-block" do %><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>

  <% end %>

<h2>New book</h2>
<%= form_for(book) do |f| %>



  <h4>Title</h4>
  <%= f.text_field :title, class: "col-lg-12" %>

  <h4>Opinion</h4>
  <%= f.text_area :body, class: "col-lg-12" %>

  <br>
  <%= f.submit "Create Book", class: "btn btn-primary col-lg-12 createbook" %>

<% end %>