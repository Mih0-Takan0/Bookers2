<div class="container">
<div class="row">

<div class="col-lg-3">
<%= render 'books/list', book: @book , user: @user %>
</div>

<div class="col-lg-9">
<h2>Users</h2>

<table class = "table table-striped">
  <thead>
   <tr>
   	<th>image</th>
    <th>name</th>
    <th></th>
  </tr>
  </thead>


<tbody>
<% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
    <td><%= user.name %></td>
    <td><%= link_to "show", user_path(user) %></td>
  </tr>

<%end %>

</tbody>
</table>

</div>
</div>
</div>


